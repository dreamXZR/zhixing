<view class="music" style="height:100%;width:100%">
  <view class="banner">
    <image src="{{servsers}}{{music.img_url}}"></image>
    <slider bindchanging="musicChange" bindchange='musicChange' step="1" value="{{progress}}" max='100' min='0' block-size='15' style='width:80%;position:absolute;bottom:14rpx;'/>
    <image src="{{pic}}" class="play" bindtap="audioPlay"></image>
  </view>
</view>

<view style='padding-top:430rpx;'>
  <view wx:if="{{music.money!='0.00'}}">售价：{{music.money}}</view>
  
    <button bindtap='toBuy'>发送邮箱</button>
</view>
   
  
