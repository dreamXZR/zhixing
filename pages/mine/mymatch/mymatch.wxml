<view class="container">
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{index == currentTpye ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{index}}" data-index="{{index}}">
            {{item}}
            <view class="{{tabClass[index]}}" wx:if="{{index!=0}}"></view>
        </view> 
    </view> 
    <view class="no-order" wx:if='{{status==0}}'>
         <image src="/images/no-order.png" class="no-order-img"></image> 
        <view class="text">暂无信息</view> 
    </view>
    <view class="order-list" wx:if='{{status==1}}'>
        <view class="a-order" wx:for-items="{{orderList}}" wx:key="{{index}}" wx:for-index="idx">
        <view  class="weui-media-box weui-media-box_appmsg">       
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image wx:if="{{orderList[idx].img_url}}" class="weui-media-box__thumb" src="{{servsers}}{{orderList[idx].img_url}}" />
                    <image wx:if="{{orderList[idx].video_img_url}}" class="weui-media-box__thumb" src="{{orderList[idx].video_img_url}}" />
                </view> 
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title content-tit">{{orderList[idx].type}}</view>
                    <view wx:if="{{orderList[idx].group}}" class="weui-media-box__desc content-con">参赛组别：{{orderList[idx].group}}</view>
                    <view wx:if="{{orderList[idx].item_name}}" class="weui-media-box__desc content-con">参赛项目：{{orderList[idx].item_name}}</view>
                    <view wx:if="{{orderList[idx].name}}" class="weui-media-box__desc content-con">参赛人：{{orderList[idx].name}}</view>
                    <view class="weui-media-box__desc content-con">报名时间：{{orderList[idx].time}}</view>
                    
                </view>
          <text wx:if="{{orderList[idx].win!==null}}" class='win'>{{orderList[idx].win}}</text>
          <view class='nowwatch' wx:if="{{currentTpye==1}}" catchtap='govideo' data-id='{{orderList[idx].video_id}}'>立即观看</view>
        </view>    
      
        </view>

    </view>
</view>

