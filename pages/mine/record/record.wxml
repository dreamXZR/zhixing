<view wx:if="{{status==0}}" >
    <view class="title-box">
        暂时无任何观看记录
    </view>
    <view class="to-index-btn" bindtap="toIndexPage">
            去看看
    </view>
</view>


<view wx:if="{{status==1}}">  
  <view class="weui-panel__bd">
    <view wx:for="{{videoList}}" >
                <navigator url="../../music/musicvideo/musicvideo?video_id={{item.video_id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{servsers}}{{item.mv_img}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title content-tit">{{item.mv_name}}</view>
                        <view class="weui-media-box__desc content-con">观看时间：{{item.created_at}}</view>
                    </view>
                </navigator>
               
    </view>   
            
            
  </view>
</view>