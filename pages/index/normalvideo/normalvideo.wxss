.talk-item{
  width: 100%;
}

.talk-item-right{
  color: #000;
  height: 100px;
 }  

 .talk-item-left{
  width: 30px;
}
.talk-item-left image{
  width: 40px;
  height: 40px;
}  
/* 底部元素  */
.talk-footer {  
    width: 100%;  
    height: 100%;
    background-color: #333333;
} 
 .talk-input {
    font-size: 32rpx;
    width: 88%;  
    color: #fff;  
    border: 1px solid #5e6666;
    background-color: #333333;
    padding: 20rpx 40rpx;   
    border-top-left-radius: 5%;  
    border-top-right-radius: 5%;
} 

.info_all{
  width: 100%;
  height: 100%;
} 
.img{
  height: 80rpx;
  width: 80rpx;
  border-radius: 40%;
}
.player-all{
  overflow: hidden;
  display: block;
  padding: 2px 5px;
  margin-bottom: 5px;
}
.player-all .img{
  float: left;
}
.player-all .img image{
  width: 100rpx;
  height: 100rpx;
}
.playerinfo{
  float: left;
  width: 80%;
  margin-left: 10px;
}

.player-name{
font-size: 30rpx;
color: #b0bbbb;
}
.player-content{
font-size: 40rpx;
color: #fff;
}
.player-time{
font-size: 30rpx;
color: #b0bbbb;
}
.talk-count{
  color: #fff;
}
.nocomment{
  text-align: center;
  color: #fff;
  height: 150rpx;
}