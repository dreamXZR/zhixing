<!-- 轮播图 -->
<view>
  <swiper catchtap="onSwiperTap" vertical="{{false}}"  indicator-dots="true" autoplay="true" interval="2000" circular="true">
   <block wx:for="{{jsonText}}" wx:for-item="i"> 
   <view wx:for="{{i}}" wx:for-item="j">
    <swiper-item>
      <image src="{{servsers}}{{j.img_url}}"/>
    </swiper-item>
   </view>
    </block>
   
  </swiper>
</view>
<!-- 导航区 -->

<view class="recommend_tr">
    <view class="recommend_tr_img" wx:for="{{banner}}">
      <image class="image" catchtap='onTap' src='{{item.img}}' mode="aspectFit" data-url='{{item.url}}'></image>
      <text class="coin">{{item.name}}</text>
    </view>
</view>
<!-- 精选视频 -->
<view class="recommend_tr_desc">
  <text>精选视频</text>
</view>
<!-- 分栏 -->
<view class="status-box">
  <view bindtap="statusTap" class="status-label {{index == currentTpye ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{index}}" data-index="{{index}}">
      {{item}}
      <view class="{{tabClass[index]}}" wx:if="{{index!=0}}"></view>
  </view>
</view> 
<!-- 内容 --> 

<block wx:if="{{currentTpye==2}}" wx:for="{{indexvideo}}">
  <view>{{index}}</view>
  <view wx:for="{{item}}" wx:for-item="j" style='display:inline-block'>
    <view style= "width:350rpx;" class="recommend_sp_img" data-id='{{j.id}}'catchtap='onTapMatchVideo'>
      <image class="image1" src="{{j.video_img_url}}" ></image>
      <text class="shiping">参赛人：{{j.name}}</text>
    </view>
  </view>
</block>
<view class="recommend_sp">
  <block  wx:for="{{indexvideo}}" wx:for-item="i" wx:if="{{currentTpye!=2}}">
    <block wx:for="{{i}}" wx:for-item="j">
      <view wx:if="{{currentTpye!=2}}" class='recommend_sp_img'style= "width:350rpx;" data-url='{{j.video_url}}' data-image='{{j.video_img}}' data-id='{{j.id}}' data-name='{{j.video_title}}' catchtap="{{currentTpye==1 ? 'onTapMusic':'onTapVideo'}}">
        <image class="image1" src="{{servsers}}{{j.video_img}}" ></image>
        <text class="shiping">{{j.video_title}}</text>
      </view>
    </block> 
  </block>
</view>


 

 


