view{
  overflow: hidden;
}
.content-tit{
  font-size: 35rpx;
}
.content-con{
  font-size: 30rpx;
}

.zan-panel {
  background: #fff;
  /*border-top: 1rpx solid #e5e5e5;*/
  border-bottom: 1rpx solid #e5e5e5;
  overflow: hidden;
  margin-bottom:10px;
  width:100%;
  border-radius:10rpx;
}

/*文章相关*/
.articles{
  background-color: #fff;
}
.article__item{
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;
}
.article__thumb{
  width:4.2rem;
  height: 3rem;
  margin-right: 0.6rem;
}
.article__image{
  width:4.2rem;
  height: 3rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
  padding-bottom:5px;
  padding-top:5px;
}
.article__title{
  font-weight: 400;
  font-size: 26rpx;
  text-overflow: ellipsis;
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.article__desc{
  color: #999;
  font-size: 24rpx;
  width: 100%;
}
.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}


.article__time{
  margin-right: 10rpx;
}
.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
}

.article__icon{
  width: 33rpx;
  height: 20rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.footaboutme {
  background-color: #F2f2f2;
  text-align: center;
  color: #ccc;
  font-size: 10px;
}

.zan-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 10px;
}

.zan-cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}
.zan-cell__bd {
  flex: 1;
  color: #e64340;
}
.zan-cell__ft {
  position: relative;
  text-align: right;
  color: #666;
}