<import src="../../../wxParse/wxParse.wxml"/> 
<view class='page'>

<view class='desc'> 
<text>投票说明：</text>
    <view class="wxParse descinfo">
        <template is="wxParse" data="{{wxParseData:gift_content.nodes}}"/>
    </view>
</view>
 
<view class='gift_all'>
<view class="{{state == idx?  'set' : ''}}" wx:for="{{buygift}}" wx:for-index="idx" bindtap="thisVal" data-key='{{idx}}'>
<view class='gift1' bindtap="toggleList">
<image src='{{servsers}}{{buygift[idx].gift_img_url}}'></image>
<view class='gift_name'>{{buygift[idx].gift_name}}</view>
<view class='gift_money'><text>价格：</text>{{buygift[idx].gift_money}}</view>
</view>
</view>
</view>

<view class='buygiftcount' style="display:{{show}}">
<view class='giftname'>{{giftname}}</view>
  <view class="tui-number-group">
        <button class="tui-number-cell" bindtap="nextNum">-</button>
        <input class="tui-number-cell" type="number" value='{{number1}}'disabled='false'></input>
        <button class="tui-number-cell" bindtap="prevNum">+</button>
      </view>
      <view>总金额：{{money}}</view>
</view>

<button class='toupiao'catchtap='onTapBuy'>投票</button>

</view>